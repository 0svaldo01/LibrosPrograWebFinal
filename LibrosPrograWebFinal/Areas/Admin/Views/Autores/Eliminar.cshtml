@model LibrosPrograWebFinal.Models.Autores

<h2>Eliminar Autor</h2>

<p>¿Estás seguro de que deseas eliminar este autor?</p>

<form method="post" action="~/Admin/Autores/Eliminar">
    <input type="hidden" name="IdAutor" value="@Model.IdAutor" />

    <p><strong>Nombre Completo:</strong></p><br />
    <input type="text" name="NombreAutor" value="@Model.NombreAutor" readonly /><br />
    <p><strong>Fecha de Nacimiento:</strong></p><br />
    <input type="text" name="FechaNacimiento" value="@Model.FechaNacimiento?.ToString("yyyy-MM-dd")" readonly /><br />
    <p><strong>Nacionalidad:</strong></p><br />
    <input type="text" name="Nacionalidad" value="@Model.Nacionalidad" readonly /><br />

    <button type="submit">Eliminar</button>
</form>
<div>
    <p style="color:red; font-size:16px;">@Html.ValidationSummary()</p>
</div>
<a  href="~/Admin/Autores/Index">Cancelar</a>
