@model LibrosPrograWebFinal.Models.Libros
@{
	Layout = "_LayoutAdmin";
}
<div class="agg">

	<h2>Eliminar Genero</h2>

	<form method="post" action="~/Admin/Libros/Eliminar">
		<div>
			<h3 id="h3">¿Estás seguro de que deseas eliminar este libro?</h3>
			<input type="hidden" name="IdLibro" value="@Model.IdLibro" />

			<label><strong>Nombre del libro:</strong></label><br />
			<input type="text" name="Titulo" value="@Model.Titulo" readonly /><br />

		</div>
		
		<p style="color:red; font-size:16px;">@Html.ValidationSummary()</p>

		<button type="submit">Eliminar</button>
	</form>
	<a href="~/Admin/Libros/Index">Cancelar</a>
